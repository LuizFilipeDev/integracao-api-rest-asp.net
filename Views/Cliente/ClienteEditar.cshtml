<!DOCTYPE html>
<html lang="pt-br">
    <head>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Clientes</title>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">
        <link rel="stylesheet" type="text/css" href="~/Content/Css/ClienteEditar.css">

    </head>

    <body>

        <div class="container rounded pt-4 pb-3 mt-3">
            <div style="font-size: 25px;">
                <b>Cliente</b> - <small>@(Model._id != null ? "Editar" : "Inserir")</small>
            </div>
            <section id="botoes" class="col-xs-12 col-sm-12 col-md-12 col-lg-12 mt-2 mb-1 pt-3 pb-3 rounded">
                <div>
                    <button type="button" onclick="window.location.href='/Cliente/Index';" class="btn btn-secondary botao">Voltar</button>
                    <button type="button" onclick="javascript:verificar();" class="btn btn-secondary botao">Salvar</button>
                    <button type="button" onclick="window.location.href='/Cliente/ClienteEditar';" class="btn btn-secondary botao">Novo</button>
                    <button type="button" onclick="javascript:deletar();" class="btn btn-secondary botao" style="float:right">Excluir</button>
                </div>
            </section>
            <br>
            <section id="clientes-cadastrados" class="col-xs-12 col-sm-12 col-md-12 col-lg-12 mt-1 mb-2 pt-3 pb-3 rounded">
                <div id="titulo-tabela" style="font-size: 25px;">
                    <b>Formulário de Edição:</b>
                </div>
                <form class="form">
                    <div class="row">

                        <div class="form-group mb-2 col-sm-12 col-md-12 col-lg-6" id="grupoId">
                            <label for="id" class="sr-only">Identificador</label>
                            <input type="text" class="form-control" maxlength="100" id="id" disabled="disabled" value="@Model._id">
                        </div>
                        <div class="form-group mb-2 col-sm-12 col-md-12 col-lg-6" id="grupoNome">
                            <label for="nome" class="sr-only">Nome</label>
                            <input type="text" class="form-control" maxlength="100" id="nome" value="@Model.Nome">
                        </div>
                        <div class="form-group mb-2 col-sm-12 col-md-12 col-lg-6" id="grupoEmail">
                            <label for="email" class="sr-only">E-mail</label>
                            <input type="text" class="form-control" maxlength="100" id="email" value="@Model.Email">
                        </div>
                        <div class="form-group mb-2 col-sm-12 col-md-12 col-lg-6" id="grupoTelefone">
                            <label for="telefone" class="sr-only">Telefone</label>
                            <input type="text" class="form-control" maxlength="9" id="telefone" value="@(Model.Telefone != 0 ? Model.Telefone : string.Empty)">
                        </div>

                    </div>
                </form>
            </section>
        </div>

        <div class="modal fade" id="modalAtualizar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Sucesso!</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                    </div>
                    <div class="modal-body">
                        <p>Cliente Atualizado com sucesso!</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" id="btnModal" data-bs-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/Content/Script/ClienteEditar.js"></script>
    </body>

</html>